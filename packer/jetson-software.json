{
  "builders" : [
    {
      "type": "null",
      "ssh_host":     "{{user `host`}}",
      "ssh_username": "weeds",
      "ssh_password" : "{{user `user_password`}}",
      "ssh_pty" : "true"
    }
  ],
  "provisioners" : [
    {
      "type": "file",
      "source": "./install-sw.sh",
      "destination": "~/install-sw.sh"
    },
    {
      "type": "file",
      "source": "./jetson-requirements.txt",
      "destination": "~/jetson-requirements.txt"
    },
    {
      "type": "file",
      "source": "./pylon_6.2.0.21487_aarch64_setup.tar.gz",
      "destination": "~/pylon_6.2.0.21487_aarch64_setup.tar.gz"
    },
    {
      "type": "shell",
      "remote_folder": "~",
      "inline": [
        "echo {{user `sudo_password`}} | sudo -S bash ~/install-sw.sh",
        "rm ~/install-sw.sh"
      ]
    }
  ]
}
