{
  "builders" : [
    {
      "type": "null",
      "ssh_host":     "{{user `host`}}",
      "ssh_username": "weeds",
      "ssh_password" : "{{user `user_password`}}",
      "ssh_pty" : "true"
    }
  ],
  "provisioners" : [
    {
      "type": "file",
      "source": "./install-dns.sh",
      "destination": "~/install-dns.sh"
    },
    {
      "type": "file",
      "source": "./dns",
      "destination": "~/dns"
    },
    {
      "type": "shell",
      "remote_folder": "~",
      "inline": [
        "echo {{user `sudo_password`}} | sudo -S bash ~/install-dns.sh",
        "rm ~/install-dns.sh"
      ]
    }
  ]
}
